{
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "standard",
    "standard-jsx",
    "plugin:prettier/recommended",
    "prettier/react",
    "prettier/standard"
  ],
  "rules": {
    "linebreak-style": ["error", "unix"]
  },
  "globals": {
    "localStorage": true,
    "apiUrl": true,
    "authHeader": true,
    "jsonResponse": true
  }
}
